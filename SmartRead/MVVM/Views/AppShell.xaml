<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="SmartRead.MVVM.Views.AppShell"
       xmlns:User="clr-namespace:SmartRead.MVVM.Views.User"
       xmlns:Book="clr-namespace:SmartRead.MVVM.Views.Book"
       xmlns:Local="clr-namespace:SmartRead"
       Shell.FlyoutBehavior="Disabled"
       Title="SmartRead">

    <!-- Páginas de autenticación (fuera del TabBar) -->
    <ShellContent Route="login" ContentTemplate="{DataTemplate User:LoginPage}" />
    <ShellContent Route="register" ContentTemplate="{DataTemplate User:RegisterPage}" />
    <ShellContent Route="forgotpassword" ContentTemplate="{DataTemplate User:ForgotPasswordPage}" />

    <!-- TabBar para navegación principal -->
    <TabBar>
        <Tab Icon="home.png">
            <ShellContent Route="home" ContentTemplate="{DataTemplate Book:HomePage}" />
        </Tab>
        <Tab Icon="news.png">
            <ShellContent Route="news" ContentTemplate="{DataTemplate Book:NewsPage}" />
        </Tab>
        <Tab Icon="account.png">
            <ShellContent Route="profile" ContentTemplate="{DataTemplate User:ProfilePage}" />
        </Tab>
    </TabBar>
</Shell>