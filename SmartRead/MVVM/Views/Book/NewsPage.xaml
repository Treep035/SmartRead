<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SmartRead.MVVM.ViewModels"
             xmlns:ui="clr-namespace:Xe.AcrylicView;assembly=Xe.AcrylicView"
             x:Class="SmartRead.MVVM.Views.Book.NewsPage"
             BackgroundColor="Black"
             Title="Noticias">

    <ContentPage.BindingContext>
        <vm:NewsViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*">
        <!-- HEADER ACRÍLICO Y BOTÓN DE BÚSQUEDA -->
        <ui:AcrylicView
            EffectStyle="Custom"
            VerticalOptions="Start"
            Margin="0"
            TintOpacity="0.4"
            TintColor="Black"
            BorderColor="Transparent"
            BorderThickness="0"
            CornerRadius="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Fila 0: Título y búsqueda -->
                <Grid Grid.Row="0" Padding="20,20,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Text="SmartRead"
                        TextColor="White"
                        FontSize="24"
                        VerticalOptions="Center"/>
                    <ImageButton
                        Grid.Column="1"
                        Source="search.png"
                        BackgroundColor="Transparent"
                        HeightRequest="40"
                        WidthRequest="40"
                        Command="{Binding NavigateToSearchCommand}"
                        Padding="5"/>
                </Grid>

                <!-- Fila 1: Botones de filtro estilo HomePage -->
                <StackLayout
                    x:Name="FiltersButtonRow"
                    Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalOptions="Start"
                    Padding="10"
                    HeightRequest="65"
                    Spacing="15">
                    
                    <!-- Botón Populares -->
                    <Frame
                        Padding="15,5"
                        BackgroundColor="Transparent"
                        BorderColor="#95BBBBBB"
                        CornerRadius="15"
                        HasShadow="False">
                        <StackLayout Orientation="Horizontal" Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="Populares" TextColor="#BBBBBB" FontSize="18"/>
                            <Image Source="populares_icon.png" HeightRequest="16" WidthRequest="16"/>
                        </StackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CargarPopularesCommand}" />
                        </Frame.GestureRecognizers>
                    </Frame>

                    <!-- Botón Novedades -->
                    <Frame
                        Padding="15,5"
                        BackgroundColor="Transparent"
                        BorderColor="#95BBBBBB"
                        CornerRadius="15"
                        HasShadow="False">
                        <StackLayout Orientation="Horizontal" Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="Novedades" TextColor="#BBBBBB" FontSize="18"/>
                            <Image Source="novedades_icon.png" HeightRequest="16" WidthRequest="16"/>
                        </StackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CargarNovedadesCommand}" />
                        </Frame.GestureRecognizers>
                    </Frame>

                </StackLayout>
            </Grid>
        </ui:AcrylicView>

        <!-- CONTENIDO PRINCIPAL -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="10,0">
                <CollectionView ItemsSource="{Binding LibrosActuales}"
                ItemsLayout="VerticalList"
                Margin="0,10">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#1E1E1E"
                   CornerRadius="12"
                   Padding="12"
                   Margin="0,15"
                   HasShadow="False"
                   BorderColor="#333">
                                <!-- Quitamos la HeightRequest fija del Grid para que sea auto -->
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">

                                    <!-- Frame idéntico al de HomePage, ¡con esquinas recortadas! -->
                                    <Frame Grid.Column="0"
                           Padding="0"
                           WidthRequest="140"
                           HeightRequest="200"
                           CornerRadius="10"
                           HasShadow="False"
                           BackgroundColor="Transparent"
                           BorderColor="Transparent"
                           >
                                        <Image Source="{Binding Imagen}"
                               Aspect="AspectFill"
                               VerticalOptions="Fill"
                               HorizontalOptions="Fill">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToInfoCommand}"
                                    CommandParameter="{Binding .}" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                    </Frame>

                                    <!-- Resto de la ficha (título, descripción y botones) -->
                                    <VerticalStackLayout Grid.Column="1"
                                         Padding="0"
                                         Spacing="6"
                                         VerticalOptions="FillAndExpand">
                                        <Label Text="{Binding Titulo}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"
                               LineBreakMode="TailTruncation" />
                                        <Label Text="{Binding Descripcion}"
                               FontSize="14"
                               TextColor="#CCCCCC"
                               LineBreakMode="WordWrap"
                               MaxLines="3" />
                                        <HorizontalStackLayout Spacing="12"
                                               Margin="0,10,0,0"
                                               VerticalOptions="End">
                                            <Button Text="Leer ahora"
                                    BackgroundColor="White"
                                    TextColor="Black"
                                    CornerRadius="6"
                                    Padding="20,8"
                                    FontAttributes="Bold"
                                    FontSize="13" />
                                            <Button Text="Lista"
                                    ImageSource="list.png"
                                    BackgroundColor="#2A2A2A"
                                    TextColor="White"
                                    CornerRadius="6"
                                    Padding="20,8"
                                    FontSize="13" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>


    </Grid>
</ContentPage>
