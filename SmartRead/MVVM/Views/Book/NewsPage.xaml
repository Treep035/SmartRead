<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SmartRead.MVVM.ViewModels"
             x:Class="SmartRead.MVVM.Views.Book.NewsPage"
             BackgroundColor="Black"
             Title="Noticias">

    <ContentPage.BindingContext>
        <vm:NewsViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20">

            <!-- 游댳 T칤tulo de la secci칩n -->
            <Label Text="Novedades"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   Margin="0,0,0,10"/>

            <!-- 游댳 Botones de selecci칩n (Usando Grid en lugar de StackLayout) -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Grid.Column="0"
                        Text="游닀 Los 10 libros m치s populares"
                        BackgroundColor="White"
                        TextColor="Black"
                        CornerRadius="25"
                        Padding="25,8"
                        FontSize="14"
                        WidthRequest="180"
                        LineBreakMode="WordWrap"
                        Command="{Binding CargarPopularesCommand}">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button" Binding="{Binding PopularSelected}" Value="True">
                            <Setter Property="BackgroundColor" Value="Gray"/>
                            <Setter Property="TextColor" Value="White"/>
                        </DataTrigger>
                    </Button.Triggers>
                </Button>

                <Button Grid.Column="1"
                        Text="游닗 Novedades editoriales"
                        BackgroundColor="White"
                        TextColor="Black"
                        CornerRadius="25"
                        Padding="25,8"
                        FontSize="14"
                        WidthRequest="180"
                        LineBreakMode="WordWrap"
                        Command="{Binding CargarNovedadesCommand}">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button" Binding="{Binding NovedadesSelected}" Value="True">
                            <Setter Property="BackgroundColor" Value="Gray"/>
                            <Setter Property="TextColor" Value="White"/>
                        </DataTrigger>
                    </Button.Triggers>
                </Button>
            </Grid>

            <!-- 游댳 Lista de libros -->
            <CollectionView ItemsSource="{Binding LibrosActuales}"
                            ItemsLayout="VerticalList"
                            Margin="0,10,0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#222"
                               CornerRadius="10"
                               Padding="10,5,10,10"
                               Margin="0,20,0,25"
                               BorderColor="Transparent"
                               HasShadow="False">
                            <Grid RowDefinitions="Auto"
                                  ColumnDefinitions="Auto,*"
                                  ColumnSpacing="10"
                                  HeightRequest="180">
                                <!-- Contenedor del libro con n칰mero superpuesto -->
                                <Grid Grid.Column="0" Grid.Row="0"
                                      WidthRequest="100"
                                      HeightRequest="190"
                                      Margin="0,-5,0,0">

                                    <!-- N칰mero del libro -->
                                <Label Text="{Binding Numero}"
                                       FontSize="50"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       Opacity="0.12"
                                       WidthRequest="100"
                                       HorizontalTextAlignment="Center"
                                       TranslationY="-12"
                                       VerticalOptions="Start"
                                       HorizontalOptions="Center"
                                       ZIndex="2"
                                       IsVisible="{Binding PopularSelected}"/>
                                   

                                <!-- Imagen del libro -->
                                <Image Source="{Binding Imagen}"
                                       WidthRequest="100"
                                       HeightRequest="150"
                                       Aspect="AspectFit"
                                       VerticalOptions="End"
                                       HorizontalOptions="Center"
                                       ZIndex="1"/>
                                </Grid>
                                <!-- Informaci칩n del libro -->
                                <VerticalStackLayout Grid.Column="1" Grid.Row="0" HeightRequest="150" VerticalOptions="Fill" Padding="0,5,0,5"> 
                                    <Label Text="{Binding Titulo}" 
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           Margin="0,0,0,5"
                                           LineBreakMode="WordWrap"/>

                                    <Label Text="{Binding Descripcion}" 
                                           FontSize="14"
                                           TextColor="White"
                                           LineBreakMode="WordWrap"
                                           MaxLines="3"
                                           Margin="0,0,0,5"/>

                                    <HorizontalStackLayout Spacing="10" Margin="0,15,0,0" VerticalOptions="End" HorizontalOptions="Center">
                                        <Button Text="游닀 Leer ahora"
                                                BackgroundColor="White"
                                                TextColor="Black"
                                                CornerRadius="10"
                                                Padding="5,5"/>

                                        <Button Text="游늷 + Lista"
                                                BackgroundColor="Gray"
                                                TextColor="White"
                                                CornerRadius="10"
                                                Padding="5,5"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
