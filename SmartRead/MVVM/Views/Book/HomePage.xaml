<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SmartRead.MVVM.ViewModels"
             xmlns:ui="clr-namespace:Xe.AcrylicView;assembly=Xe.AcrylicView"
             x:Class="SmartRead.MVVM.Views.Book.HomePage"
             BackgroundColor="Black">

    <Grid RowDefinitions="Auto,*">
        <!-- Contenedor superior con efecto acrílico -->
        <ui:AcrylicView EffectStyle="Custom"
                        VerticalOptions="Start"
                        Margin="0"
                        TintOpacity="0.4"
                        TintColor="Black"
                        BorderColor="Transparent"
                        BorderThickness="0"
                        CornerRadius="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Fila 0: Header -->
                <Grid Grid.Row="0" BackgroundColor="Transparent" Padding="20,20,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="SmartRead"
                           TextColor="White"
                           FontSize="24"
                           VerticalOptions="Center"
                           HorizontalOptions="Start" />
                    <ImageButton Grid.Column="1"
             Source="search.png"
             BackgroundColor="Transparent"
             BorderColor="Transparent"
             BorderWidth="1"
             HeightRequest="40"
             WidthRequest="40"
             Command="{Binding NavigateToSearchCommand}"
             HorizontalOptions="Center"
             VerticalOptions="Center"
             Padding="5"/>

                </Grid>
                <!-- Fila 1: Botón de Categorías -->
                <StackLayout x:Name="CategoriesButtonRow"
                             Grid.Row="1"
                             Orientation="Horizontal"
                             HorizontalOptions="Start"
                             Padding="10"
                             HeightRequest="65">
                    <Frame Padding="15,5"
                           BackgroundColor="Transparent"
                           BorderColor="#95BBBBBB"
                           CornerRadius="15"
                           HasShadow="False">
                        <StackLayout Orientation="Horizontal"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center"
                                     Spacing="8">
                            <Label Text="{Binding SelectedCategoryLabel}"
                                   TextColor="#BBBBBB"
                                   FontSize="18"
                                   VerticalOptions="Center"/>
                            <Image Source="{Binding SelectedCategoryImageWithExtension}"
                                   HeightRequest="16"
                                   WidthRequest="16"
                                   VerticalOptions="Center"/>
                        </StackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToCategoriesCommand}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </StackLayout>
            </Grid>
        </ui:AcrylicView>

        <!-- Contenido principal -->
        <ScrollView Grid.Row="1" Scrolled="OnScrollViewScrolled">
            <VerticalStackLayout Spacing="20">
                <!-- Ejemplo de contenido principal -->
                <Grid>
                    <Frame Padding="0"
                           Margin="0"
                           CornerRadius="20"
                           BorderColor="Transparent"
                           BackgroundColor="Transparent"
                           HasShadow="False"
                           IsClippedToBounds="True"
                           HorizontalOptions="Center"
                           VerticalOptions="FillAndExpand"
                           WidthRequest="350">
                        <Image Source="home_image2.png"
                               Aspect="AspectFill"
                               VerticalOptions="FillAndExpand"
                               HorizontalOptions="FillAndExpand" />
                    </Frame>
                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center"
                                 VerticalOptions="End"
                                 Margin="0,0,0,20"
                                 Spacing="15">
                        <Frame Padding="0"
                               BackgroundColor="White"
                               CornerRadius="5"
                               HeightRequest="45"
                               WidthRequest="160"
                               BorderColor="Transparent"
                               HasShadow="False">
                            <StackLayout Orientation="Horizontal"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         Padding="10,5"
                                         Spacing="18">
                                <Image Source="read.png"
                                       HeightRequest="22"
                                       WidthRequest="22"
                                       VerticalOptions="Center"/>
                                <Label Text="Leer"
                                       TextColor="Black"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </StackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding LeerCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                        <Frame Padding="0"
                               BackgroundColor="#CC808080"
                               CornerRadius="5"
                               HeightRequest="45"
                               WidthRequest="160"
                               BorderColor="Transparent"
                               HasShadow="False">
                            <StackLayout Orientation="Horizontal"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         Padding="10,5"
                                         Spacing="18">
                                <Image Source="list.png"
                                       HeightRequest="22"
                                       WidthRequest="22"
                                       VerticalOptions="Center"/>
                                <Label Text="Mi lista"
                                       TextColor="White"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </StackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding LeerCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </StackLayout>
                </Grid>

                <!-- Lista de Categorías con carruseles horizontales -->
                <CollectionView ItemsSource="{Binding Categories}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <!-- Contenedor para cada categoría -->
                            <VerticalStackLayout Spacing="10" Margin="5">
                                <!-- Al tocar la celda se invoca el comando para cargar más libros de la categoría -->
                                <VerticalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.LoadMoreBooksByCategoryCommand}"
                                        CommandParameter="{Binding .}" />
                                </VerticalStackLayout.GestureRecognizers>
                                <Label Text="{Binding Name}"
                                       FontSize="20"
                                       TextColor="White"
                                       Margin="10,0"/>
                                <!-- Carrusel horizontal de libros -->
                                <CollectionView ItemsSource="{Binding Books}"
                                                HeightRequest="200"
                                                RemainingItemsThreshold="2"
                                                Margin="5"
                                                RemainingItemsThresholdReachedCommand="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.LoadMoreBooksByCategoryCommand}"
                                                RemainingItemsThresholdReachedCommandParameter="{Binding .}">
                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout Orientation="Horizontal"
                                                            ItemSpacing="10" />
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame Padding="0"
                                                   WidthRequest="140"
                                                   HeightRequest="200"
                                                   CornerRadius="5"
                                                   HasShadow="False"
                                                   BorderColor="Transparent"
                                                   BackgroundColor="Transparent">
                                                <Image Source="{Binding CoverImageUrl}"
                                                       Aspect="AspectFill">
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer 
                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToInfoCommand}"
                                                            CommandParameter="{Binding .}" />
                                                    </Image.GestureRecognizers>
                                                </Image>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>