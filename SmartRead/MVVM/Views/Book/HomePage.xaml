<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SmartRead.MVVM.ViewModels"
    xmlns:ui="clr-namespace:Xe.AcrylicView;assembly=Xe.AcrylicView"
    xmlns:conv="clr-namespace:SmartRead.MVVM.Converters"
    x:Class="SmartRead.MVVM.Views.Book.HomePage"
    BackgroundColor="Black">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        <!-- HEADER ACRÍLICO Y BOTÓN DE BÚSQUEDA -->
        <ui:AcrylicView
        EffectStyle="Custom"
        VerticalOptions="Start"
        Margin="0"
        TintOpacity="0.4"
        TintColor="Black"
        BorderColor="Transparent"
        BorderThickness="0"
        CornerRadius="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Fila 0: Título y búsqueda -->
                <Grid Grid.Row="0" Padding="20,20,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label
              Text="SmartRead"
              TextColor="White"
              FontSize="24"
              VerticalOptions="Center"/>
                    <ImageButton
              Grid.Column="1"
              Source="search.png"
              BackgroundColor="Transparent"
              HeightRequest="40"
              WidthRequest="40"
              Command="{Binding NavigateToSearchCommand}"
              Padding="5"/>
                </Grid>

                <!-- Fila 1: Selector de categorías -->
                <StackLayout
            x:Name="CategoriesButtonRow"
            Grid.Row="1"
            Orientation="Horizontal"
            HorizontalOptions="Start"
            Padding="10"
            HeightRequest="65">
                    <Frame
              Padding="15,5"
              BackgroundColor="Transparent"
              BorderColor="#95BBBBBB"
              CornerRadius="15"
              HasShadow="False">
                        <StackLayout
                Orientation="Horizontal"
                Spacing="8"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                            <Label
                  Text="{Binding SelectedCategoryLabel}"
                  TextColor="#BBBBBB"
                  FontSize="18"/>
                            <Image
                  Source="{Binding SelectedCategoryImageWithExtension}"
                  HeightRequest="16"
                  WidthRequest="16"/>
                        </StackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToCategoriesCommand}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </StackLayout>
            </Grid>
        </ui:AcrylicView>

        <!-- CONTENIDO PRINCIPAL -->
        <ScrollView Grid.Row="1" Scrolled="OnScrollViewScrolled">
            <VerticalStackLayout Spacing="20">
                <!-- Banner principal y botones Leer/Mi lista (sin cambios) -->
                <Grid>
                    <Frame Padding="0"
                           Margin="0"
                           CornerRadius="20"
                           BorderColor="Transparent"
                           BackgroundColor="Transparent"
                           HasShadow="False"
                           IsClippedToBounds="True"
                           HorizontalOptions="Center"
                           VerticalOptions="FillAndExpand"
                           WidthRequest="350">
                        <Image Source="home_image2.png"
                               Aspect="AspectFill"
                               VerticalOptions="FillAndExpand"
                               HorizontalOptions="FillAndExpand" />
                    </Frame>
                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center"
                                 VerticalOptions="End"
                                 Margin="0,0,0,20"
                                 Spacing="15">
                        <Frame Padding="0"
                               BackgroundColor="White"
                               CornerRadius="5"
                               HeightRequest="45"
                               WidthRequest="160"
                               BorderColor="Transparent"
                               HasShadow="False">
                            <StackLayout Orientation="Horizontal"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         Padding="10,5"
                                         Spacing="18">
                                <Image Source="read.png"
                                       HeightRequest="22"
                                       WidthRequest="22"
                                       VerticalOptions="Center"/>
                                <Label Text="Leer"
                                       TextColor="Black"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </StackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding LeerCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                        <Frame Padding="0"
                               BackgroundColor="#CC808080"
                               CornerRadius="5"
                               HeightRequest="45"
                               WidthRequest="160"
                               BorderColor="Transparent"
                               HasShadow="False">
                            <StackLayout Orientation="Horizontal"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         Padding="10,5"
                                         Spacing="18">
                                <Image Source="list.png"
                                       HeightRequest="22"
                                       WidthRequest="22"
                                       VerticalOptions="Center"/>
                                <Label Text="Mi lista"
                                       TextColor="White"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </StackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding LeerCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </StackLayout>
                </Grid>
                <!-- === LISTA DE CATEGORÍAS === -->

                <!-- 1) Todas las categorías -->
                <CollectionView
            x:Name="AllCategoriesCV"
            IsVisible="{Binding SelectedCategory, Converter={StaticResource InverseBoolConverter}}"
            ItemsSource="{Binding Categories}"
            SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="10" Margin="5">
                                <VerticalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer
                      Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.LoadMoreBooksByCategoryCommand}"
                      CommandParameter="{Binding .}" />
                                </VerticalStackLayout.GestureRecognizers>
                                <Label
                    Text="{Binding Name}"
                    FontSize="20"
                    TextColor="White"
                    Margin="10,0"/>
                                <CollectionView
                    ItemsSource="{Binding Books}"
                    HeightRequest="200"
                    RemainingItemsThreshold="2"
                    Margin="5"
                    RemainingItemsThresholdReachedCommand="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.LoadMoreBooksByCategoryCommand}"
                    RemainingItemsThresholdReachedCommandParameter="{Binding .}">
                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame
                          Padding="0"
                          WidthRequest="140"
                          HeightRequest="200"
                          CornerRadius="5"
                          HasShadow="False"
                          BackgroundColor="Transparent">
                                                <Image
                            Source="{Binding CoverImageUrl}"
                            Aspect="AspectFill">
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToInfoCommand}"
                                CommandParameter="{Binding .}" />
                                                    </Image.GestureRecognizers>
                                                </Image>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- 2) Sólo la categoría filtrada -->
                <CollectionView
                    x:Name="FilteredCategoriesCV"
                    IsVisible="{Binding SelectedCategory}"
                    ItemsSource="{Binding FilteredCategories}"
                    SelectionMode="None">   
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="10" Margin="5">
                                <Label
                                    Text="{Binding Name}"
                                    FontSize="20"
                                    TextColor="White"
                                    Margin="10,0"/>
                                <CollectionView
                                    ItemsSource="{Binding Books}"
                                    HeightRequest="200"
                                    RemainingItemsThreshold="2"
                                    Margin="5"
                                    RemainingItemsThresholdReachedCommand="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.LoadMoreBooksByCategoryCommand}"
                                    RemainingItemsThresholdReachedCommandParameter="{Binding .}">   
                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame
                                                  Padding="0"
                                                  WidthRequest="140"
                                                  HeightRequest="200"
                                                  CornerRadius="5"
                                                  HasShadow="False"
                                                  BackgroundColor="Transparent">
                                                <Image
                                                    Source="{Binding CoverImageUrl}"
                                                    Aspect="AspectFill">    
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToInfoCommand}"
                                                            CommandParameter="{Binding .}" />   
                                                    </Image.GestureRecognizers>
                                                </Image>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
