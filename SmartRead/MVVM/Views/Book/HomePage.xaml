<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SmartRead.MVVM.ViewModels"
             x:Class="SmartRead.MVVM.Views.Book.HomePage"
            
             BackgroundColor="Black">

    <ContentPage.BindingContext>
        <vm:HomeViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout>

            <!-- Sección de imagen de fondo y barra superior -->
            <Grid>
                <Image Source="home_image.png"
                       Aspect="AspectFill"
                       VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand" />

                <Image Source="Search.png"
                       HeightRequest="30"
                       WidthRequest="30"
                       HorizontalOptions="End"
                       VerticalOptions="Start"
                       Margin="10" />

                <StackLayout Orientation="Horizontal"
                     HorizontalOptions="Center"
                     VerticalOptions="Start"
                     Margin="0,50,0,0"
                     Spacing="50">
                    <Label Text="Libros"
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Label Text="Novelas"
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Label Text="Categorías"
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToCategoriesCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>

                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             VerticalOptions="End"
                             Margin="0,0,0,20"
                             Spacing="60">

                    <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                        <Label Text="Añadir a"
                               TextColor="White"
                               FontSize="13"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="la lista"
                               TextColor="White"
                               FontSize="13"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>

                    <Button Text="Leer"
                            TextColor="Black"
                            BackgroundColor="White"
                            FontSize="13"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            Padding="10,5"
                            WidthRequest="70"/>

                    <Label Text="Info"
                           TextColor="White"
                           FontSize="13"
                           FontAttributes="Bold"/>
                </StackLayout>
            </Grid>

            <!-- Lista de Categorías con sus libros -->
            <CollectionView ItemsSource="{Binding Categories}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>

                            <!-- Título de la Categoría -->
                            <Label Text="{Binding Name}"
                                   FontSize="18"
                                   TextColor="White"
                                   Margin="10,20,0,10"/>

                            <!-- Carrusel de Libros -->
                            <CollectionView ItemsSource="{Binding Books}"
                                            ItemsLayout="HorizontalList"
                                            HeightRequest="200">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Padding="0"
                                               HasShadow="False"
                                               BackgroundColor="Transparent"
                                               BorderColor="Transparent"
                                               CornerRadius="10"
                                               WidthRequest="140"
                                               HeightRequest="200">
                                            <Image Source="{Binding ImageSource}"
                                                   Aspect="AspectFit"
                                                   HeightRequest="200"
                                                   WidthRequest="140">
                                                <Image.GestureRecognizers>
                                                    <TapGestureRecognizer 
                                                         Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToInfoCommand}"
                                                         CommandParameter="{Binding .}" />
                                                </Image.GestureRecognizers>
                                            </Image>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>

