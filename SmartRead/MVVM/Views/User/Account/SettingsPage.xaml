<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartRead.MVVM.Views.User.Account.SettingsPage"
             BackgroundColor="#000000"
             Title="Configuración de la aplicación"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:SmartRead.MVVM.ViewModels"
             xmlns:sfComboBox="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs">

    <ContentPage.BindingContext>
        <local:SettingsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30,40,25,0" Spacing="50">

            <!-- Título con botón de cierre -->
            <Grid ColumnDefinitions="*, Auto, *" VerticalOptions="Center" Padding="0,10">
                <Label Grid.Column="1"
                       Text="Configuración de la aplicación"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,3,0,0"/>
                <ImageButton Grid.Column="2"
                             Source="close.png"
                             Clicked="Close"
                             HeightRequest="32"
                             WidthRequest="32"
                             HorizontalOptions="End"
                             VerticalOptions="Start"
                             Margin="0,0,0,10"/>
            </Grid>

            <!-- Idioma -->
            <Grid ColumnDefinitions="*, Auto" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                <Label Text="Idioma"
           FontSize="18"
           TextColor="White"
           VerticalOptions="Center"
           HorizontalOptions="Start"
           Grid.Column="0" />
                <!-- SfComboBox para Tema -->
                <sfComboBox:SfComboBox
                           HorizontalOptions="End" 
                           WidthRequest="150"
                           TextColor="White" 
                           BackgroundColor="#171717"
                           IsClearButtonVisible="False"
                           SelectedItem="{Binding Idioma}" 
                           ItemsSource="{Binding ListaIdiomas}"
                           Grid.Column="1" />
            </Grid>

            <!-- Tema -->
            <Grid ColumnDefinitions="*, Auto" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                <Label Text="Tema"
                       FontSize="18"
                       TextColor="White"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       Grid.Column="0" />
                <!-- SfComboBox para Tema -->
                <sfComboBox:SfComboBox
                                       HorizontalOptions="End" 
                                       WidthRequest="150"
                                       TextColor="White" 
                                       BackgroundColor="#171717"
                                       IsClearButtonVisible="False"
                                       SelectedItem="{Binding Tema}" 
                                       ItemsSource="{Binding ListaTemas}"
                                       Grid.Column="1" />
            </Grid>

            <!-- Tamaño de letra -->
            <Grid ColumnDefinitions="*, Auto" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                <Label Text="Tamaño de letra"
                       FontSize="18"
                       TextColor="White"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       Grid.Column="0" />
                <!-- SfComboBox para Tamaño de letra -->
                <sfComboBox:SfComboBox
                                       HorizontalOptions="End" 
                                       WidthRequest="150"
                                       TextColor="White" 
                                       BackgroundColor="#171717"
                                       IsClearButtonVisible="False"
                                       SelectedItem="{Binding TamañoLetra}" 
                                       ItemsSource="{Binding ListaTamañosLetra}"
                                       Grid.Column="1"/>
            </Grid>

            <!-- Restablecer preferencias -->
            <Label Text="Restablecer preferencias"
                   FontSize="18"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Start">
                <!-- Agregar GestureRecognizer si se requiere restablecer -->
            </Label>

            <!-- Política de privacidad -->
            <Label Text="Política de privacidad"
                   FontSize="18"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Start">
                <!-- Agregar GestureRecognizer si se requiere ver política -->
            </Label>

            <!-- Acerca de SmartRead -->
            <Label Text="Acerca de SmartRead"
                   FontSize="18"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Start">
                <!-- Agregar GestureRecognizer si se requiere información sobre la app -->
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
