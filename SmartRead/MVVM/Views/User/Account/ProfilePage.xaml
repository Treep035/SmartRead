<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SmartRead.MVVM.ViewModels"
    x:Class="SmartRead.MVVM.Views.User.Account.ProfilePage"
    BackgroundColor="Black"
    Title="Perfil">

    <Grid RowDefinitions="Auto,*">

        <!-- HEADER con menú hamburguesa -->
        <Grid BackgroundColor="Black" Padding="15,10,15,0">
            <Image Source="menu.png"
                   WidthRequest="40"
                   HeightRequest="40"
                   HorizontalOptions="End"
                   VerticalOptions="Start">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnMenuClicked"/>
                </Image.GestureRecognizers>
            </Image>
        </Grid>

        <!-- CONTENIDO PRINCIPAL -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Perfil de Usuario -->
                <VerticalStackLayout HorizontalOptions="Center" Margin="0,10,0,20">
                    <Image Source="usuario.png"
                           WidthRequest="100"
                           HeightRequest="100"/>
                    <Label Text="{Binding Username}"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <!-- Progreso de Lectura -->
                <VerticalStackLayout HorizontalOptions="Center">
                    <Grid WidthRequest="220" HeightRequest="18">
                        <BoxView BackgroundColor="#E0E0E0"
                                 CornerRadius="10"
                                 WidthRequest="220"
                                 HeightRequest="18"/>
                        <BoxView BackgroundColor="#FFC766"
                                 CornerRadius="10"
                                 WidthRequest="{Binding WeeklyProgressWidth}"
                                 HeightRequest="18"
                                 HorizontalOptions="Start"/>
                    </Grid>
                    <Label Text="Esta semana has leído"
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           Margin="0,5,0,0"/>
                    <Label Text="{Binding WeeklyPagesRead, StringFormat='{0} páginas'}"
                           TextColor="#FFC766"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>

                <BoxView BackgroundColor="#808080"
                         HeightRequest="1"
                         HorizontalOptions="FillAndExpand"/>

                <!-- Libros que te han gustado -->
                <Label Text="Libros que te han gustado"
                       FontSize="20"
                       TextColor="White"/>
                <CollectionView ItemsSource="{Binding LikedBooks}"
                                HeightRequest="200">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="0"
                                   WidthRequest="140"
                                   HeightRequest="200"
                                   CornerRadius="5"
                                   HasShadow="False"
                                   BackgroundColor="Transparent">
                                <Image Source="{Binding CoverImageUrl}"
                                       Aspect="AspectFill">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToInfoCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Mi lista -->
                <Label Text="Mi lista"
                       FontSize="20"
                       TextColor="White"
                       Margin="0,10,0,0"/>
                <CollectionView ItemsSource="{Binding MyListBooks}"
                                HeightRequest="200">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid WidthRequest="140" HeightRequest="200">
                                <!-- Portada -->
                                <Frame Padding="0"
                                       CornerRadius="5"
                                       HasShadow="False"
                                       BackgroundColor="Transparent">
                                    <Image Source="{Binding CoverImageUrl}"
                                           Aspect="AspectFill">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToInfoCommand}"
                                                CommandParameter="{Binding .}" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                </Frame>

                                <!-- Botón Eliminar superpuesto -->
                                <Button Text="✕"
                                        FontSize="12"
                                        WidthRequest="24"
                                        HeightRequest="24"
                                        CornerRadius="12"
                                        BackgroundColor="#80000000"
                                        TextColor="White"
                                        Padding="0"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveFromListCommand}"
                                        CommandParameter="{Binding .}"
                                        HorizontalOptions="End"
                                        VerticalOptions="Start"
                                        Margin="5"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Seguir leyendo -->
                <Label Text="Seguir leyendo"
                       FontSize="20"
                       TextColor="White"
                       Margin="0,10,0,0"/>
                <CollectionView ItemsSource="{Binding ContinueReadingBooks}"
                                HeightRequest="200"
                                EmptyView="No hay ningún libro en curso.">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="0"
                                   WidthRequest="140"
                                   HeightRequest="200"
                                   CornerRadius="5"
                                   HasShadow="False"
                                   BackgroundColor="Transparent">
                                <Image Source="{Binding CoverImageUrl}"
                                       Aspect="AspectFill">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToInfoCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
