<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SmartRead.MVVM.ViewModels"
             x:Class="SmartRead.MVVM.Views.User.ForgotPasswordPage"
             BackgroundImageSource="background.png"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <vm:ForgotPasswordViewModel />
    </ContentPage.BindingContext>

    <Grid VerticalOptions="Center" HorizontalOptions="Center" Padding="30">
        <Grid BackgroundColor="#BE1F1F1F" Padding="20" WidthRequest="300" VerticalOptions="Center">
            <VerticalStackLayout Spacing="15">
                <Image Source="smartread.png" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="100"/>

                <HorizontalStackLayout Spacing="10">
                    <Entry Placeholder="Correo electrónico"
                           BackgroundColor="#BE1F1F1F"
                           TextColor="White"
                           HeightRequest="50"
                           WidthRequest="170"
                           Text="{Binding Email}" />

                    <Button BackgroundColor="White"
                        TextColor="Black"
                        HeightRequest="50"
                        WidthRequest="75"
                        FontSize="11"
                        Text=" Enviar&#10;Código"
                        Command="{Binding SendCodeToEmailCommand}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="10">
                    <Entry Placeholder="Código"
                           BackgroundColor="#BE1F1F1F"
                           TextColor="White"
                           HeightRequest="50"
                           WidthRequest="170"
                           Text="{Binding Code}"/>

                    <Button Text="Enviar"
                        BackgroundColor="White"
                        TextColor="Black"
                        HeightRequest="50"
                        WidthRequest="75"
                        Command="{Binding SendCodeCommand}" />
                </HorizontalStackLayout>

                <Label Text="¿Recuerdas tu contraseña?"
                    HorizontalOptions="Center"
                    TextColor="#808080">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}" />
                    </Label.GestureRecognizers>
                </Label>

            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
