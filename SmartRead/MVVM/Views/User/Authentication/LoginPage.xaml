<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SmartRead.MVVM.ViewModels"
             x:Class="SmartRead.MVVM.Views.User.LoginPage"
             BackgroundImageSource="background.png"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>

    <Grid VerticalOptions="Center" HorizontalOptions="Center" Padding="30">
        <Grid BackgroundColor="#BE1F1F1F" Padding="20" WidthRequest="300" VerticalOptions="Center">
            <VerticalStackLayout Spacing="15">
                <Image Source="smartread.png" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="100"/>

                <Entry Placeholder="Correo electrónico"
                       BackgroundColor="#BE1F1F1F"
                       TextColor="White"
                       HeightRequest="50"
                       Text="{Binding Email}" />

                <Entry Placeholder="Contraseña"
                       BackgroundColor="#BE1F1F1F"
                       TextColor="White"
                       HeightRequest="50"
                       IsPassword="True"
                       Text="{Binding Password}" />

                <Button Text="Iniciar sesión"
                        BackgroundColor="White"
                        TextColor="Black"
                        HeightRequest="40"
                        VerticalOptions="End"
                        Command="{Binding LoginCommand}" />

                <Label Text="¿No estás registrado? Regístrate"
                       HorizontalOptions="Center"
                       TextColor="#808080">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToRegisterCommand}" />
                    </Label.GestureRecognizers>
                </Label>

            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
